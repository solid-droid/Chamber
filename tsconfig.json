{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    
    /* THE KEY CHANGES */
    "allowJs": true,           // Allows TS to read your JS files
    "checkJs": false,          // STOPS the error reporting/linting in JS
    "noEmit": true,            // Vite handles the build, not TS
    
    /* Maintain your path aliases */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    "moduleResolution": "bundler",
    "skipLibCheck": true
  },
  "include": ["src/**/*", "types.d.ts"] // Keeps your types in scope
}